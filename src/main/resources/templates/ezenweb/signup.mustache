{{>ezenweb/header}}
<div class="container">
    <form class="signUpForm">
        <h1> 회원가입 페이지 </h1>
        <p> 회원가입을 통해 다양한 이벤트에 참여하세요 </p>

        <div class="label"> 아이디 </div>
          <input onkeyup="idCheck()"  type="text" id="id" name="id" /> <br/>
          <div class="idCheckbox checkbox"></div>
        <div class="label"> 비밀번호 </div>
        <input onkeyup="pwcheck()" type="text" id="pw" name="pw" /> <br/>
        <div class="label"> 비밀번호 확인 </div>
        <input onkeyup="pwcheck()"type="text" id="pwconfirm" name="pwconfirm"/> <br/>
        <div class="pwcheckbox checkbox"></div>
        <div class="label"> 이름 </div>
        <input onkeyup="namecheck()" type="text" id="name" name="name"/> <br/>
        <div class="namecheckbox checkbox"></div>
        <div class="label"> 전화번호 </div>
        <input onkeyup="phonecheck()" type="text" id="phone" name="phone" /> <br/>
        <div class="phonecheckbox checkbox"></div>

        <div class="label"> 이메일 </div>

        <div class="emailbox">
            <input onkeyup="emailcheck()" type="text" id="email" name="email" />
            <button type="button" class="authreqbtn" onclick="authreq( this )" disabled > 인증요청 </button>
        </div>

        <div class="authbox">

        </div>

        <div class="emailcheckbox checkbox"></div>

        <div class="label"> 프로필 사진 </div>
        <input onchange="onChangeImg( this )" type="file" id="img"
               name="img" accept="image/*" /> <br/>
        <div> 미리보기 </div>
        <div class="preimgbox">    <img id="preimg" src="/img/default.jpg" />   </div>

        <button class="signUpbtn" type="button" onclick="signup(  )">회원가입</button>
        <a id="loginbtn2" href="/member/login">로그인</a>
        

    </form>
</div>
<script src="/js/member.js"></script>   <!-- {resources/static} /js/member.js -->
{{>ezenweb/footer}}

