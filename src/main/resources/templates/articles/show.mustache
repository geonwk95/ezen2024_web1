{{>layouts/header}}
    <table border="1">
        <thead>
        <tr>
            <th> ID </th>
            <th> Title </th>
            <th> Content </th>
        </tr>
        </thead>
        <tbody>
            {{#article}}
            <tr>
                <td> {{ article.id }} </td>
                <td> {{ article.title }} </td>
                <td> {{ article.content }} </td>
            </tr>
            {{/article}}
        </tbody>
    </table>
    <a href="/articles/{{ article.id }}/edit">수정(Edit)</a>
    <a href="/articles/{{ article.id }}/delete">삭제(Delete)</a>
    <a href="/articles">글 목록보기(Go to Article List)</a> <br/>


{{>layouts/footer}}